<div class="container">
  <!-- <p><%= notice %></p> -->
  <div class="row">
    <% @blogs.each_with_index do |blog, i| %>
      <% if i % 5 == 0 %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-3 panel panel-success">
      <% elsif i % 5 == 1 %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-3 panel panel-warning">
      <% elsif i % 5 == 2 %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-3 panel panel-info">
      <% elsif i % 5 == 3 %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-3 panel panel-danger">
      <% else %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-3 panel panel-default">
      <% end %>

        <div class="panel-heading">
          <%= blog.title %>
        </div>
        <div class="panel-body">
          <div class="scr">
            <p>
              <strong>投稿者:</strong>
              <%= blog.user.name %>
            </p>
            <p><%= blog.content %></p>

            <%= image_tag blog.image %>
          </div>
          <div class="blog-links">
            <%= link_to '詳細', blog_path(blog.id), class: 'btn btn-success' %>
            <% if logged_in? %>
              <% if blog.user_id == current_user.id%>
                <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-warning', data: { confirm: '本当に編集していいですか？' } %>
                <%= link_to '削除', blog_path(blog.id), method: :delete, class: 'btn btn-danger', data: { confirm: '本当に削除していいですか？' } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
